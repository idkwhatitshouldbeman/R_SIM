FoamFile
{
    version     2.0;
    format      ascii;
    class       pointVectorField;
    location    "0";
    object      pointDisplacement;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 0];

internalField   uniform (0 0 0);

boundaryField
{
    // Fixed boundaries (rocket body, inlet, outlet)
    inlet
    {
        type            fixedValue;
        value           uniform (0 0 0);
    }
    
    outlet
    {
        type            fixedValue;
        value           uniform (0 0 0);
    }
    
    rocketBody
    {
        type            fixedValue;
        value           uniform (0 0 0);
    }
    
    // Moving fin boundaries - these will be updated by the control system
    fin1
    {
        type            fixedValue;
        value           uniform (0 0 0);
    }
    
    fin2
    {
        type            fixedValue;
        value           uniform (0 0 0);
    }
    
    fin3
    {
        type            fixedValue;
        value           uniform (0 0 0);
    }
    
    fin4
    {
        type            fixedValue;
        value           uniform (0 0 0);
    }
    
    // Symmetry and other boundaries
    symmetry
    {
        type            slip;
    }
    
    frontAndBack
    {
        type            empty;
    }
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
